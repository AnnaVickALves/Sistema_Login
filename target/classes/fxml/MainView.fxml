<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
 
<VBox fx:id="mainContainer" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="main-view-container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuapp.view.MainViewController">
   <children>
      <Label fx:id="welcomeLabel" styleClass="main-view-label" text="Bem-vindo!">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="roleLabel" styleClass="main-view-label" text="Seu nível de acesso é: " />
      <Button fx:id="adminButton" mnemonicParsing="false" onAction="#handleAdminAction" text="Acessar Painel de Admin" visible="false" />
      <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutAction" text="Logout" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>